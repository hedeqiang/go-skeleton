# 应用环境配置
APP_ENV=development
VERSION=latest
BUILD_TIME=
GIT_COMMIT=

# 数据库配置 (PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=123456
POSTGRES_DB=skeleton
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=123456
DATABASE_NAME=skeleton

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# RabbitMQ 配置
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=admin123

# API 服务配置
API_HOST=0.0.0.0
API_PORT=8080
APP_HOST=0.0.0.0
APP_PORT=8080

# 日志配置
LOG_LEVEL=debug
LOG_ENCODING=console
LOG_OUTPUT_PATH=stdout

# JWT 认证配置
JWT_SECRET=a-secure-secret-key-that-is-long-enough
JWT_EXPIRE_DURATION=24h

# 调度器配置
SCHEDULER_ENABLED=true

# OpenTelemetry Tracing 配置
TRACE_ENABLED=false
TRACE_ENDPOINT=http://127.0.0.1:14268/api/traces
TRACE_SAMPLER_TYPE=const
TRACE_SAMPLER_PARAM=1


# 数据库连接配置 (MySQL - 如果使用)
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=passworld
MYSQL_DATABASE=testdb
MYSQL_CHARSET=utf8mb4

# 连接池配置
DB_MAX_OPEN_CONNS=100
DB_MAX_IDLE_CONNS=10
DB_CONN_MAX_LIFETIME=1h

# 开发环境特定配置
DEV_MODE=true
DEBUG=true

# 服务发现配置 (如果需要)
SERVICE_NAME=skeleton
SERVICE_VERSION=latest

# 缓存配置
CACHE_TTL=3600

# 消息队列配置
MQ_EXCHANGE_NAME=hello.exchange
MQ_EXCHANGE_TYPE=direct
MQ_QUEUE_NAME=hello.queue
MQ_ROUTING_KEY=hello

# 健康检查配置
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30s


# 监控配置
METRICS_ENABLED=true
METRICS_PORT=9090

# 安全配置
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization